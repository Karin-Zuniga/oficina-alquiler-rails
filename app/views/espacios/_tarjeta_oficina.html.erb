<div class="card" style="width: 18rem; margin-top: 1em;">
    <div class="card-body">
        <h5 class="card-title"><%= espacio.codigo %></h5>
        <p class="card-text">Precio:<%= espacio.precio %> </p>
        <% if espacio.esta_alquilada %>
            <span>Alquilado por:</span>
            <ul>
                <% espacio.inquilinos.each do |inquilino| %>
                    <li>
                        <%= inquilino.nombre + " " + inquilino.apellido %>
                    </li>
                    
                <% end %>
            </ul>   
        <% else %>
            <p> DISPONIBLE <p>    
        <% end %>
        
        <a href="#" class="btn btn-primary">Editar</a>
         <a href="#" class="btn btn-warning">Borrar inquilino</a>
    </div>
</div>