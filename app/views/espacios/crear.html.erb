<h1>Crear una nueva oficina para alquilar</h1>
<%= form_with(model: @espacio_nuevo, url: '/espacios/guardar') do |formulario| %>
    <% if @espacio_nuevo.errors.any? %>
        <% @espacio_nuevo.errors.each do |error| %>
            <p> <%= error.full_message %> </p>
        <% end %>
    <% end %>


    <%= formulario.label :codigo %><br>
    <%= formulario.text_field :codigo %><br>
    <%= formulario.label :precio %><br>
    <%= formulario.text_field :precio %><br>
    <%= formulario.label :esta_alquilada %><br>
    <%= formulario.check_box :esta_alquilada %><br>
    <%= formulario.submit %>
<% end %>